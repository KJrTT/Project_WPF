<Window x:Class="WpfApp2.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Views"
        mc:Ignorable="d"
        Title="Календарь-заметник" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid>
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Right" Width="250" Background="{DynamicResource WindowBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Заметки" FontSize="18" FontWeight="Bold" 
                           Margin="10,15,10,5" Foreground="{DynamicResource TextBrush}"/>

                <ListBox x:Name="NotesListBox" Grid.Row="1" Margin="10,0,10,10"
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource CalendarCellBorderBrush}" BorderThickness="0,0,0,1" Padding="0,5">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" 
                                                   Margin="0,3,0,5" Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding DateLocal, StringFormat='dd.MM.yyyy HH:mm'}" 
                                                   FontSize="10" Foreground="{DynamicResource TextBrush}"/>
                                    </StackPanel>
                                    <Button Content="Удалить" Margin="10,0,0,0" 
                                            Click="DeleteNoteButton_Click"
                                            Tag="{Binding Id}" 
                                            VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button x:Name="AddNoteButton" Grid.Row="2" Content="Добавить заметку" 
                        Margin="10,0,10,10" Padding="10,5" Background="#FF1976D2" 
                        Foreground="White" BorderThickness="0" Click="AddNoteButton_Click"/>
            </Grid>

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Button Content="◄" FontSize="16" Width="30" Margin="0,0,10,0" Click="Button_Click_1"/>
                    <TextBlock x:Name="MonthYearTextBlock" Text="{Binding MonthYearText}" FontSize="18" 
                               FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                    <Button Content="►" FontSize="16" Width="30" Margin="10,0,0,0" Click="Button_Click"/>
                </StackPanel>
                <ItemsControl x:Name="CalendarDaysControl" Grid.Row="1">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="6" Columns="7"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource CalendarCellBorderBrush}" BorderThickness="1" Margin="1" 
                            Background="{DynamicResource CalendarCellBackgroundBrush}">
                                <Border.ToolTip>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Date, StringFormat='dd.MM.yyyy'}" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding HolidayName}" Foreground="Red" FontWeight="Bold"/>
                                        <ItemsControl ItemsSource="{Binding DayNotes}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Title}" Foreground="{DynamicResource TextBrush}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border.ToolTip>
                                <StackPanel>
                                    <TextBlock Text="{Binding DayNumber}" 
                              HorizontalAlignment="Right" Margin="5,2,5,0"
                              Foreground="{DynamicResource CalendarCellTextBrush}"/>
                                    <TextBlock Text="{Binding HolidayName}" 
                              HorizontalAlignment="Center" Margin="2"
                              FontSize="8" TextWrapping="Wrap" TextAlignment="Center"
                              Foreground="Red" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </DockPanel>
        <Button x:Name="ThemeToggleButton"
                Content="🌙"
                Width="36" Height="36"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Click="ThemeToggleButton_Click"
                ToolTip="Переключить тему"/>
    </Grid>
</Window>