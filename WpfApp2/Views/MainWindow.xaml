<Window x:Class="WpfApp2.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Views"
        mc:Ignorable="d"
        Title="Календарь-заметник" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Left" Width="150" Background="#FFE3F2FD">
            <TextBlock Text="2024" FontSize="16" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,10,0,5"/>
            <ListBox x:Name="MonthListBox" Background="Transparent" 
                     BorderThickness="0" SelectedIndex="0">
                <ListBoxItem x:Name ="listbox1" Content="Январь" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox2" Content="Февраль" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox3" Content="Март" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox4" Content="Апрель" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox5" Content="Май" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox6" Content="Июнь" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox7" Content="Июль" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox8" Content="Август" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox9" Content="Сентябрь" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox10" Content="Октябрь" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox11" Content="Ноябрь" Padding="10,5"/>
                <ListBoxItem x:Name ="listbox12" Content="Декабрь" Padding="10,5"/>
            </ListBox>
        </StackPanel>

        <Grid DockPanel.Dock="Right" Width="250" Background="#FFF5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Заметки" FontSize="18" FontWeight="Bold" 
                       Margin="10,15,10,5" Foreground="#FF424242"/>

            <ListBox x:Name="NotesListBox" Grid.Row="1" Margin="10,0,10,10"
                     Background="Transparent" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="0,5">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" 
                                           Margin="0,3,0,5" Foreground="#FF616161"/>
                                <TextBlock Text="{Binding Date, StringFormat='dd.MM.yyyy'}" 
                                           FontSize="10" Foreground="#FF9E9E9E"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button x:Name="AddNoteButton" Grid.Row="2" Content="Добавить заметку" 
                    Margin="10,0,10,10" Padding="10,5" Background="#FF1976D2" 
                    Foreground="White" BorderThickness="0" Click="AddNoteButton_Click"/>
        </Grid>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <Button Content="◄" FontSize="16" Width="30" Margin="0,0,10,0" Click="Button_Click_1"/>
                <TextBlock x:Name="MonthYearTextBlock" Text="{Binding MonthYearText}" FontSize="18" 
                           FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="►" FontSize="16" Width="30" Margin="10,0,0,0" Click="Button_Click"/>
            </StackPanel>
            <ItemsControl x:Name="CalendarDaysControl" Grid.Row="1">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="6" Columns="7"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FFE0E0E0" BorderThickness="1" Margin="1" 
                                Background="{Binding BackgroundBrush}">
                            <TextBlock Text="{Binding DayNumber}" 
                                      HorizontalAlignment="Right" Margin="5"
                                      Foreground="{Binding ForegroundBrush}"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </DockPanel>
</Window>