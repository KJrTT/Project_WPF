<Window x:Class="WpfApp2.Views.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Views"
        mc:Ignorable="d"
        Title="Добавить заметку" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Заголовок:" Grid.Row="0"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="1" Margin="0 5" 
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Описание:" Grid.Row="2"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="3" Margin="0 5" Height="60" 
                 TextWrapping="Wrap" AcceptsReturn="True"
                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Width="80" Margin="0 0 10 0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="80" Click="CancelButton_Click"/>
        </StackPanel>

        <Label Content="Уровень приоритета" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="4" VerticalAlignment="Top" Width="110" Height="23" FontSize="10"/>
        <Label Content="Вид задачи" HorizontalAlignment="Left" Margin="249,5,0,0" Grid.Row="4" VerticalAlignment="Top" FontSize="10"/>
        <ComboBox x:Name="MyComboBox" HorizontalAlignment="Left" Margin="10,42,0,0" Grid.Row="4" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="MyComboBox2" HorizontalAlignment="Left" Margin="250,31,0,0" Grid.Row="4" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name ="Textbox" HorizontalAlignment="Left" Margin="250,67,0,0" Grid.Row="4" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>