<Window x:Class="WpfApp2.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Topmost="True" Width="300" Height="100">
    <Border Background="#FF1976D2" CornerRadius="10" Padding="10">
        <StackPanel>
            <TextBlock x:Name="TitleText" FontWeight="Bold" Foreground="White" FontSize="16"/>
            <TextBlock x:Name="DescText" Foreground="White" FontSize="14" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</Window> 